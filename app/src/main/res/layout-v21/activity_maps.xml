<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapsActivity" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="103dp"
        android:layout_height="90dp"
        tools:context=".MapsActivity" />

    <EditText
        android:id="@+id/emailField1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_edit_text_cut"
        android:drawableStart="@android:drawable/ic_menu_sort_by_size"
        android:drawablePadding="12dp"
        android:hint="Email"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
        android:drawableRight="@android:drawable/ic_menu_sort_by_size"
        android:drawableEnd="?attr/actionModeWebSearchDrawable">
        <Button
            android:layout_width="match_parent"

            android:background="@drawable/hamburger"/>
    </EditText>

    <Button
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText1"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="0dp"
        android:background="?attr/actionModeWebSearchDrawable"
        android:padding="5dp"
        tools:targetApi="lollipop"  />

</RelativeLayout>